{
    "name": "symplify/monorepo-builder",
    "description": "Not only Composer tools to build a Monorepo.",
    "license": "MIT",
    "bin": [
        "bin/monorepo-builder"
    ],
    "require": {
        "php": ">=8.0",
        "nette/utils": "^3.2",
        "phar-io/version": "^3.1",
        "symfony/finder": "^5.3|^6.0",
        "symfony/dependency-injection": "^5.3|^6.0",
        "symfony/console": "^5.3|^6.0",
        "symfony/process": "^5.3|^6.0",
        "symplify/package-builder": "^9.4.44",
        "symplify/composer-json-manipulator": "^9.4.44",
        "symplify/smart-file-system": "^9.4.44",
        "symplify/console-color-diff": "^9.4.44",
        "symplify/symplify-kernel": "^9.4.44"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\MonorepoBuilder\\": [
                "src",
                "packages"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\MonorepoBuilder\\Tests\\": [
                "tests",
                "packages-tests"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "9.5-dev"
        }
    },
    "config": {
        "platform-check": false
    },
    "conflict": {
        "symplify/astral": "<9.4.44",
        "symplify/easy-coding-standard": "<9.4.44",
        "symplify/phpstan-rules": "<9.4.44",
        "symplify/easy-testing": "<9.4.44",
        "symplify/psr4-switcher": "<9.4.44",
        "symplify/rule-doc-generator-contracts": "<9.4.44",
        "symplify/symfony-php-config": "<9.4.44",
        "symplify/simple-php-doc-parser": "<9.4.44",
        "symplify/php-config-printer": "<9.4.44",
        "symplify/autowire-array-parameter": "<9.4.44",
        "symplify/markdown-diff": "<9.4.44",
        "symplify/amnesia": "<9.4.44",
        "symplify/phpstan-extensions": "<9.4.44",
        "symplify/rule-doc-generator": "<9.4.44",
        "symplify/console-package-builder": "<9.4.44",
        "symplify/vendor-patches": "<9.4.44",
        "symplify/skipper": "<9.4.44",
        "symplify/phpunit-upgrader": "<9.4.44",
        "symplify/easy-hydrator": "<9.4.44",
        "symplify/symfony-static-dumper": "<9.4.44",
        "symplify/git-wrapper": "<9.4.44",
        "symplify/config-transformer": "<9.4.44",
        "symplify/easy-ci": "<9.4.44",
        "symplify/coding-standard": "<9.4.44"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
